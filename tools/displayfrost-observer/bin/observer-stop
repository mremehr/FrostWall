#!/usr/bin/env bash
set -euo pipefail

STATE_DIR="${STATE_DIR:-/tmp/displayfrost-observer}"
PID_FILE="$STATE_DIR/stream.pid"

if [[ ! -f "$PID_FILE" ]]; then
  echo "observer is not running"
  exit 0
fi

pid="$(cat "$PID_FILE" || true)"
if [[ -z "${pid:-}" ]]; then
  rm -f "$PID_FILE"
  echo "observer pid file was empty, cleaned up"
  exit 0
fi

if kill -0 "$pid" 2>/dev/null; then
  kill "$pid" 2>/dev/null || true
  for _ in $(seq 1 20); do
    if ! kill -0 "$pid" 2>/dev/null; then
      break
    fi
    sleep 0.2
  done
  if kill -0 "$pid" 2>/dev/null; then
    kill -9 "$pid" 2>/dev/null || true
  fi
  echo "observer stopped (pid=$pid)"
else
  echo "observer process $pid was already stopped"
fi

rm -f "$PID_FILE"

